<header>
    <div class="logo">
        <a href="{{ shop.url }}"><img src="{{ 'logo.png' | asset_url }}" alt="Store logo"></a>
    </div>
    <nav>
        <ul>
            <li><a href="{{ shop.url }}#home">Home</a></li>
            <li><a href="{{ shop.url }}#products">Products</a></li>
