<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ shop.name }}</title>
    <link rel="stylesheet" href="{{ 'styles.css' | asset_url }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="{{ 'cart.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'contact.css' | asset_url }}">
</head>
<body>
    <section id="home">
        <div>
            <h1>Welcome to {{ shop.name }}</h1>
            <p>The best pet store</p>
            <a href="#products" class="btn">View products</a>        
        </div>
    </section>
    
    <section id="products">
        <div class="products-container">
            <h2 class="products-title">Products</h2>
            <div class="products-list">
                {% for product in collections.all.products %}
                    <a href="{{ product.url }}" class="product-link">
                        <div class="product">
                            <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" class="product-image">
                            <h3>{{ product.title }}</h3>
                            <p>{{ product.description | strip_html | truncate: 50 }}</p>
                            <button class="btn-product">Buy</button>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
        <div class="product-descriptions">
            {% for product in collections.all.products %}
                <a href="{{ product.url }}" class="product-description-link">
                    <div class="product-description">
                        <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }} large" class="large-image">
                        <div class="product-text">
                            <h3>{{ product.title }}</h3>
                            <p>{{ product.description }}</p>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </section>

    <section id="contact">
        <div class="contact-container">
            <h2>Contact Us</h2>
            <form action="https://your-store-name.myshopify.com/contact#contact_form" method="post" id="contact-form">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="contact[name]" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="contact[email]" required>
                </div>
                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea id="message" name="contact[body]" rows="4" required></textarea>
                </div>
                <button type="submit" class="submit-btn">Send</button>
            </form>
        </div>
    </section>
    <script src="{{ 'cart.js' | asset_url }}"></script>
    <script src="{{ 'main.js' | asset_url }}"></script>
    <script src="{{ 'product.js' | asset_url }}"></script>
    
</body>
</html>
