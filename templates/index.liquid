<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ shop.name }}</title>
    <link rel="stylesheet" href="{{ 'styles.css' | asset_url }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="icon" href="{{ 'logo.png' | asset_url }}" type="image/x-icon">
    <link rel="stylesheet" href="{{ 'cart.css' | asset_url }}">
</head>
<body>
    <section id="inicio">
        <div>
            <h1>Bienvenidos a {{ shop.name }}</h1>
            <p>La mejor tienda de animales</p>
            <a href="#productos" class="btn">Ver productos</a>        
        </div>
    </section>
    
    <section id="productos">
        <div class="productos-container">
            <h2 class="titulo-productos">Productos</h2>
            <div class="productos-lista">
                {% for product in collections.all.products %}
                    <a href="{{ product.url }}" class="enlace-producto">
                        <div class="producto">
                            <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" class="imagen-producto">
                            <h3>{{ product.title }}</h3>
                            <p>{{ product.description | strip_html | truncate: 50 }}</p>
                            <button class="btn-product">Ver producto</button>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
        <div class="descripcion-productos">
            {% for product in collections.all.products %}
                <div class="descripcion-producto">
                    <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }} grande" class="imagen-grande">
                    <div class="texto-producto">
                        <h3>{{ product.title }}</h3>
                        <p>{{ product.description }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
    
    <script src="{{ 'cart.js' | asset_url }}"></script>
    <script src="{{ 'main.js' | asset_url }}"></script>
</body>
</html>
